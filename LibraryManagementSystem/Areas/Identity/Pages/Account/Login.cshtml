@page
@model LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<!-- Page Header Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <h1 class="display-6 fw-bold mb-2 text-dark">Welcome Back</h1>
                <p class="text-muted mb-0">Sign in to access your library account</p>
            </div>
        </div>
    </div>
</section>

<!-- Login Form Section -->
<section class="py-5" style="background-color: var(--color-surface);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="summary-card">
                    <div class="text-center mb-4">
                        <div class="summary-card-icon icon-users mx-auto mb-3" style="width: 60px; height: 60px;">
                            <i class="bi bi-person-circle" style="font-size: 24px;"></i>
                        </div>
                        <h3 class="metric-label mb-2" style="font-size: 1.1rem; text-transform: none;">Sign In to Your Account</h3>
                        <p class="text-muted small">Enter your credentials to continue</p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-muted small fw-semibold">EMAIL ADDRESS</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-muted small fw-semibold">PASSWORD</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted small" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-dark btn-lg w-100 mb-4">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                        </button>

                        <div class="text-center">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-muted small">
                                    <i class="bi bi-question-circle me-1"></i>Forgot Password?
                                </a>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-muted small">
                                    <i class="bi bi-envelope me-1"></i>Resend Confirmation
                                </a>
                            </div>

                            <div style="border-top: 1px solid var(--color-border); padding-top: 1rem;">
                                <p class="text-muted small mb-2">Don't have an account?</p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary">
                                    <i class="bi bi-person-plus me-2"></i>Create Account
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="row justify-content-center mt-4">
                <div class="col-lg-5 col-md-7">
                    <div class="summary-card">
                        <div class="text-center mb-3">
                            <h4 class="metric-label mb-2" style="font-size: 1rem; text-transform: none;">Alternative Sign In</h4>
                            <p class="text-muted small">Use your existing account from another service</p>
                        </div>

                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Continue with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}