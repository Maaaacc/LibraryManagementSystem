@model LibraryManagementSystem.Models.Book
<div class="modal-header bg-danger text-white">
    <h5 class="modal-title" id="deleteBookModalLabel">
        <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="modal-body">
        <div class="text-center mb-4">
            <i class="bi bi-exclamation-circle text-danger" style="font-size: 4rem;"></i>
        </div>

        <div class="text-center mb-4">
            <h5 class="text-danger">Are you sure you want to delete this book?</h5>
            <p class="text-muted">This action cannot be undone.</p>
        </div>

        <div class="card border-danger">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center">
                        @if (!string.IsNullOrEmpty(Model.CoverImagePath))
                        {
                            <img src="@Model.CoverImagePath" alt="Book Cover"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height: 120px;" />
                        }
                        else
                        {
                            <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                 style="height: 120px; width: 90px; margin: 0 auto;">
                                <i class="bi bi-book text-muted" style="font-size: 2rem;"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-9">
                        <h6 class="card-title mb-3">
                            <strong>@Model.Title</strong>
                        </h6>
                        <div class="row g-2">
                            <div class="col-sm-6">
                                <small class="text-muted d-block">Author:</small>
                                <span class="fw-semibold">@Model.Author</span>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted d-block">Category:</small>
                                <span class="badge bg-light text-dark">@Model.Category</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.ISBN))
                            {
                                <div class="col-sm-6">
                                    <small class="text-muted d-block">ISBN:</small>
                                    <span class="small">@Model.ISBN</span>
                                </div>
                            }
                            <div class="col-sm-6">
                                <small class="text-muted d-block">Copies:</small>
                                @{
                                    var available = Model.AvailableCopies;
                                    var total = Model.TotalCopies;
                                    var badgeClass = available > 0 ? "badge bg-success" : "badge bg-warning";
                                }
                                <span class="@badgeClass small">@available / @total Available</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.AvailableCopies < Model.TotalCopies)
        {
            <div class="alert alert-warning mt-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Warning:</strong> This book has @(Model.TotalCopies - Model.AvailableCopies) copy/copies currently borrowed.
                Deleting this book may affect existing borrowing records.
            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i>Cancel
        </button>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i>Delete Permanently
        </button>
    </div>
</form>