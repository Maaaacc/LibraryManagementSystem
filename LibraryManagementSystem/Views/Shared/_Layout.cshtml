@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagementSystem.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg py-3" style="background: var(--color-white); border-bottom: var(--border-width) solid var(--color-border); box-shadow: var(--shadow-sm); position: sticky; top: 0; z-index: 1030;">
            <div class="container">
                <!-- Brand with Icon -->
                <a class="navbar-brand d-flex align-items-center fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="color: var(--color-text); text-decoration: none; font-size: 1.25rem; transition: all 0.2s ease;">
                    <div class="me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; background: var(--color-gray-900); border-radius: var(--border-radius-sm); color: var(--color-white); font-size: 1rem;">
                        <i class="bi bi-book"></i>
                    </div>
                    <span class="d-none d-md-inline">Digital Library</span>
                    <span class="d-md-none">Library</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="box-shadow: none; color: var(--color-text);">
                    <i class="bi bi-list" style="font-size: 1.5rem;"></i>
                </button>

                <!-- Navigation Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center px-3 py-2 mx-1 rounded" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" 
                                   style="color: var(--color-text); transition: all 0.2s ease; font-weight: 500;">
                                    <i class="bi bi-speedometer2 me-2"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center px-3 py-2 mx-1 rounded" asp-area="" asp-controller="Home" asp-action="Index"
                               style="color: var(--color-text); transition: all 0.2s ease; font-weight: 500;">
                                <i class="bi bi-house me-2"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center px-3 py-2 mx-1 rounded" asp-area="" asp-controller="Books" asp-action="Index"
                               style="color: var(--color-text); transition: all 0.2s ease; font-weight: 500;">
                                <i class="bi bi-collection me-2"></i>
                                <span>Books</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center px-3 py-2 mx-1 rounded" asp-area="" asp-controller="Borrows" asp-action="MyBorrows"
                               style="color: var(--color-text); transition: all 0.2s ease; font-weight: 500;">
                                <i class="bi bi-arrow-down-circle me-2"></i>
                                <span>My Borrows</span>
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center px-3 py-2 mx-1 rounded" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                                   style="color: var(--color-text); transition: all 0.2s ease; font-weight: 500;">
                                    <i class="bi bi-gear me-2"></i>
                                    <span>Admin</span>
                                </a>
                                <ul class="dropdown-menu" style="background: var(--color-white); border: var(--border-width) solid var(--color-border); box-shadow: var(--shadow-md); border-radius: var(--border-radius-md); padding: var(--space-sm);">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2 px-3 rounded" asp-area="Admin" asp-controller="Users" asp-action="Index"
                                           style="color: var(--color-text); transition: all 0.2s ease;">
                                            <i class="bi bi-people me-2"></i>
                                            <span>Manage Users</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2 px-3 rounded" asp-area="Admin" asp-controller="ManageBooks" asp-action="Index"
                                           style="color: var(--color-text); transition: all 0.2s ease;">
                                            <i class="bi bi-book-half me-2"></i>
                                            <span>Manage Books</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- User Account Section -->
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn d-flex align-items-center gap-2 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                        style="background: var(--color-surface); border: var(--border-width) solid var(--color-border); color: var(--color-text); border-radius: var(--border-radius-md); padding: var(--space-sm) var(--space-md); transition: all 0.2s ease;">
                                    <div class="d-flex align-items-center justify-content-center" style="width: 28px; height: 28px; background: var(--color-gray-800); border-radius: 50%; color: var(--color-white); font-size: 0.875rem;">
                                        <i class="bi bi-person"></i>
                                    </div>
                                    <span class="d-none d-sm-inline">@User.Identity.Name</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" style="background: var(--color-white); border: var(--border-width) solid var(--color-border); box-shadow: var(--shadow-md); border-radius: var(--border-radius-md); padding: var(--space-sm); min-width: 200px;">
                                    <li class="px-3 py-2">
                                        <small class="text-muted d-block">Signed in as</small>
                                        <strong style="color: var(--color-text);">@User.Identity.Name</strong>
                                    </li>
                                    <li><hr class="dropdown-divider" style="border-color: var(--color-border);"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2 px-3 rounded" asp-area="Identity" asp-page="/Account/Manage/Index"
                                           style="color: var(--color-text); transition: all 0.2s ease;">
                                            <i class="bi bi-person-gear me-2"></i>
                                            <span>Profile Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="m-0">
                                            <button type="submit" class="dropdown-item d-flex align-items-center py-2 px-3 rounded w-100 text-start border-0 bg-transparent"
                                                    style="color: var(--color-danger); transition: all 0.2s ease;">
                                                <i class="bi bi-box-arrow-right me-2"></i>
                                                <span>Logout</span>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex gap-2">
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn d-flex align-items-center gap-2"
                                   style="background: var(--color-white); border: var(--border-width) solid var(--color-border); color: var(--color-text); border-radius: var(--border-radius-md); padding: var(--space-sm) var(--space-md); transition: all 0.2s ease; text-decoration: none;">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span class="d-none d-sm-inline">Login</span>
                                </a>
                                <a asp-area="Identity" asp-page="/Account/Register" class="btn d-flex align-items-center gap-2"
                                   style="background: var(--color-gray-900); color: var(--color-white); border: var(--border-width) solid var(--color-gray-900); border-radius: var(--border-radius-md); padding: var(--space-sm) var(--space-md); transition: all 0.2s ease; text-decoration: none;">
                                    <i class="bi bi-person-plus"></i>
                                    <span class="d-none d-sm-inline">Join</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @await Html.PartialAsync("_Toast")
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>