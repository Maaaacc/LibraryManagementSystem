@{
    ViewData["Title"] = "Library Management System - Home";
}

<!-- Hero Section - Minimal Design -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3 text-dark">Digital Library Management</h1>
                <p class="lead text-muted mb-4">Streamlined book management and borrowing system for modern libraries.</p>
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <a href="/books" class="btn btn-dark btn-lg px-4">
                        <i class="bi bi-book me-2"></i>Browse Books
                    </a>
                    <a href="/register" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-person-plus me-2"></i>Join Library
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5" style="background-color: var(--color-surface);">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="metric-label mb-2" style="font-size: 1.25rem; text-transform: none;">Library Overview</h2>
                <p class="text-muted">Current system statistics</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">Total Books</h6>
                            <div class="metric-value">@ViewData["TotalBooks"]</div>
                            <p class="metric-description">In collection</p>
                        </div>
                        <div class="summary-card-icon icon-books">
                            <i class="bi bi-book"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">Active Members</h6>
                            <div class="metric-value">@ViewData["ActiveMembers"]</div>
                            <p class="metric-description">Registered users</p>
                        </div>
                        <div class="summary-card-icon icon-users">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">This Month</h6>
                            <div class="metric-value">@ViewData["BooksBorrowedThisMonth"]</div>
                            <p class="metric-description">Books borrowed</p>
                        </div>
                        <div class="summary-card-icon icon-borrowed">
                            <i class="bi bi-arrow-down-circle"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">Rating</h6>
                            <div class="metric-value">@ViewData["SatisfactionRating"]</div>
                            <p class="metric-description">System health</p>
                        </div>
                        <div class="summary-card-icon icon-journal">
                            <i class="bi bi-star-fill"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Books Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="metric-label mb-2" style="font-size: 1.25rem; text-transform: none;">Featured Books</h2>
                <p class="text-muted">Most popular titles in our collection</p>
            </div>
        </div>

        @{
            var featuredBooks = ViewData["FeaturedBooks"] as List<Book>;
        }

        @if (featuredBooks != null && featuredBooks.Any())
        {
            <div class="row g-4">
                @foreach (var book in featuredBooks)
                {
                    <div class="col-xl-4 col-md-6">
                        <div class="book-card h-100">
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-4">
                                        <div class="book-cover-placeholder" style="height: 120px; border-radius: var(--border-radius-sm);">
                                            @if (!string.IsNullOrEmpty(book.CoverImagePath))
                                            {
                                                <img src="@book.CoverImagePath"
                                                     alt="@book.Title"
                                                     class="img-fluid"
                                                     style="width: 100%; height: 120px; object-fit: cover; border-radius: var(--border-radius-sm);"
                                                     onerror="this.style.display='none'; this.parentElement.innerHTML='<i class=\'bi bi-book\' style=\'font-size: 2rem; color: var(--color-text-light);\'></i>';" />
                                            }
                                            else
                                            {
                                                <i class="bi bi-book" style="font-size: 2rem; color: var(--color-text-light);"></i>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <h6 class="fw-bold mb-2 text-truncate" title="@book.Title">@book.Title</h6>
                                        <p class="text-muted small mb-2">@book.Author</p>
                                        <span class="badge status-badge bg-light text-dark border small mb-2">@book.Category</span>

                                        <div class="mt-2">
                                            @{
                                                var availabilityClass = book.AvailableCopies > 0 ? "text-success" : "text-danger";
                                                var availabilityText = book.AvailableCopies > 0 ? "Available" : "Out of Stock";
                                                var availabilityIcon = book.AvailableCopies > 0 ? "bi-check-circle-fill" : "bi-x-circle-fill";
                                            }
                                            <small class="@availabilityClass d-flex align-items-center mb-1">
                                                <i class="bi @availabilityIcon me-1"></i>
                                                @availabilityText
                                            </small>
                                            <small class="text-muted">
                                                @book.AvailableCopies of @book.TotalCopies copies
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                @if (book.AvailableCopies > 0)
                                {
                                    <div class="mt-3 pt-3" style="border-top: 1px solid var(--color-border);">
                                        <a href="/books/details/@book.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-book"></i>
                </div>
                <h4>No Featured Books Available</h4>
                <p class="text-muted">Check back later for new additions to our collection.</p>
            </div>
        }

        <div class="text-center mt-5">
            <a href="/books" class="btn btn-dark btn-lg">
                <i class="bi bi-collection me-2"></i>Browse All Books
            </a>
        </div>
    </div>
</section>

<!-- Action Section -->
<section class="py-5" style="background-color: var(--color-surface);">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h3 class="mb-3">Get Started</h3>
                <p class="text-muted mb-4">Join our library system to start borrowing books and managing your reading collection.</p>
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <a href="/register" class="btn btn-dark btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Create Account
                    </a>
                    <a href="/books" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-search me-2"></i>Search Books
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>