@{
    ViewData["Title"] = "Library Management System - Home";
}

<!-- Hero Section - Minimal Design -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3 text-dark">Digital Library Management</h1>
                <p class="lead text-muted mb-4">Streamlined book management and borrowing system for modern libraries.</p>
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <a href="/books" class="btn btn-dark btn-lg px-4">
                        <i class="bi bi-book me-2"></i>Browse Books
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                    <a href="/register" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-person-plus me-2"></i>Join Library
                    </a>    
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5" style="background-color: var(--color-surface);">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="metric-label mb-2" style="font-size: 1.25rem; text-transform: none;">Library Overview</h2>
                <p class="text-muted">Current system statistics</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">Total Books</h6>
                            <div class="metric-value">@ViewData["TotalBooks"]</div>
                            <p class="metric-description">In collection</p>
                        </div>
                        <div class="summary-card-icon icon-books">
                            <i class="bi bi-book"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">Active Members</h6>
                            <div class="metric-value">@ViewData["ActiveMembers"]</div>
                            <p class="metric-description">Registered users</p>
                        </div>
                        <div class="summary-card-icon icon-users">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">This Month</h6>
                            <div class="metric-value">@ViewData["BooksBorrowedThisMonth"]</div>
                            <p class="metric-description">Books borrowed</p>
                        </div>
                        <div class="summary-card-icon icon-borrowed">
                            <i class="bi bi-arrow-down-circle"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="summary-card h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="metric-label">Rating</h6>
                            <div class="metric-value">@ViewData["SatisfactionRating"]</div>
                            <p class="metric-description">System health</p>
                        </div>
                        <div class="summary-card-icon icon-journal">
                            <i class="bi bi-star-fill"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Books Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="metric-label mb-2" style="font-size: 1.25rem; text-transform: none;">Featured Books</h2>
                <p class="text-muted">Most popular titles in our collection</p>
            </div>
        </div>
        @{
            var featuredBooks = ViewData["FeaturedBooks"] as List<Book>;
            var activeBorrowCount = ViewData["ActiveBorrowCount"] != null
            ? (int)ViewData["ActiveBorrowCount"]
            : 0;
        }
        @if (featuredBooks != null && featuredBooks.Any())
        {
            <div class="books-grid">
                @foreach (var book in featuredBooks)
                {
                    <div class="book-card">
                        <div class="card-body p-0">
                            <!-- Book Cover -->
                            <div class="position-relative mb-3">
                                @if (!string.IsNullOrEmpty(book.CoverImagePath))
                                {
                                    <img src="@book.CoverImagePath"
                                         alt="@book.Title"
                                         class="img-fluid w-100"
                                         style="height: 220px; object-fit: cover; border-radius: var(--border-radius-md) var(--border-radius-md) 0 0;" />
                                }
                                else
                                {
                                    <div class="book-cover-placeholder d-flex align-items-center justify-content-center"
                                         style="height: 220px; border-radius: var(--border-radius-md) var(--border-radius-md) 0 0;">
                                        <i class="bi bi-book" style="font-size: 3rem; color: var(--color-text-light);"></i>
                                    </div>
                                }

                                <!-- Availability Badge -->
                                <div class="position-absolute top-0 end-0 m-2">
                                    @if (book.AvailableCopies > 0)
                                    {
                                        <span class="badge status-available">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </div>
                            </div>

                            <!-- Book Info -->
                            <div class="px-3 pb-3">
                                <h5 class="fw-bold mb-2 text-truncate" title="@book.Title">@book.Title</h5>
                                <p class="text-muted small mb-2">by @book.Author</p>

                                <!-- Category Badge -->
                                <span class="badge bg-light text-dark border small mb-3">@book.Category</span>

                                <!-- Book Details -->
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center text-muted small mb-1">
                                        <span>Available Copies:</span>
                                        <span class="fw-semibold">@book.AvailableCopies/@book.TotalCopies</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center text-muted small">
                                        <span>ISBN:</span>
                                        <span class="fw-semibold">@book.ISBN</span>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-flex gap-2">
                                    @if (book.AvailableCopies > 0)
                                    {
                                        if (activeBorrowCount >= 3)
                                        {
                                            <button class="btn btn-warning btn-sm flex-grow-1" disabled>
                                                <i class="bi bi-exclamation-triangle me-1"></i>Limit Reached
                                            </button>
                                        }
                                        else
                                        {
                                            <form asp-controller="Borrows" asp-action="Borrow" method="post" class="flex-grow-1">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="bookId" value="@book.Id" />
                                                <button type="submit" class="btn btn-success btn-sm w-100">
                                                    <i class="bi bi-download me-1"></i>Borrow
                                                </button>
                                            </form>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-secondary btn-sm flex-grow-1" disabled>
                                            <i class="bi bi-x-circle me-1"></i>Unavailable
                                        </button>
                                    }
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state text-center py-5">
                <div class="empty-icon mb-3">
                    <i class="bi bi-book" style="font-size: 3rem;"></i>
                </div>
                <h4>No Featured Books Available</h4>
                <p class="text-muted">Check back later for new additions to our collection.</p>
            </div>
        }
        <div class="text-center mt-5">
            <a href="/books" class="btn btn-dark btn-lg">
                <i class="bi bi-collection me-2"></i>Browse All Books
            </a>
        </div>
    </div>
</section>




@if (!User.Identity.IsAuthenticated)
{
    <!-- Action Section -->
    <section class="py-5" style="background-color: var(--color-surface);">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h3 class="mb-3">Get Started</h3>
                    <p class="text-muted mb-4">Join our library system to start borrowing books and managing your reading collection.</p>
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                        <!-- Register -->
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </a>
                        <!-- Login -->
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
