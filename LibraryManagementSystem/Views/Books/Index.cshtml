@model BookSearchViewModel

@{
    ViewData["Title"] = "Browse Books";
}

<h2 class="mb-4">📚 Browse Books</h2>

<!-- Search & Filters -->
<form method="get" asp-action="Index" class="row g-2 mb-4">
    <div class="col-md-4">
        <input asp-for="SearchString" class="form-control" placeholder="Search by Title, Author, ISBN" />
    </div>
    <div class="col-md-3">
        <select asp-for="Category" class="form-control">
            <option value="">All Categories</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category" selected="@(category == Model.Category ? "selected" : null)">
                    @category
                </option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="AvailableOnly" class="form-select">
            <option value="False">All Books</option>
            <option value="True">Available Only</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">🔍 Search</button>
    </div>
</form>

<!-- Books Table -->
<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th class="text-center" style="width:80px;">Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Category</th>
            <th class="text-center">Available</th>
            <th class="text-center" style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Books != null && Model.Books.Any())
        {
            foreach (var book in Model.Books)
            {
                <tr>
                    <!-- Cover -->
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(book.CoverImagePath))
                        {
                            <img src="@book.CoverImagePath" alt="@book.Title" class="img-thumbnail" style="height: 60px;" />
                        }
                        else
                        {
                            <span class="text-muted">No Cover</span>
                        }
                    </td>

                    <!-- Book Info -->
                    <td><strong>@book.Title</strong></td>
                    <td>@book.Author</td>
                    <td>@book.ISBN</td>
                    <td>@book.Category</td>

                    <!-- Availability -->
                    <td class="text-center">
                        @if (book.AvailableCopies > 0)
                        {
                            <span class="badge bg-success">@book.AvailableCopies/@book.TotalCopies Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">0/@book.TotalCopies All Borrowed</span>
                        }
                    </td>

                    <!-- Actions -->
                    <td class="text-center">
                        @if (book.AvailableCopies > 0)
                        {
                            if (Model.ActiveBorrowCount >= 3)
                            {
                                <button class="btn btn-warning btn-sm" disabled>Limit Reached</button>
                            }
                            else
                            {
                                <form asp-controller="Borrows" asp-action="Borrow" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bookId" value="@book.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Borrow</button>
                                </form>
                            }
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>No Copies</button>
                        }

                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary btn-sm ms-1">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted py-4">
                    No books found matching your search.
                </td>
            </tr>
        }
    </tbody>
</table>
