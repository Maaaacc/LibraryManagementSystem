@model BookSearchViewModel
@{
    ViewData["Title"] = "Browse Books";
}

<!-- Page Header Section -->
<section class="py-4 bg-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-6 fw-bold mb-2 text-dark">Browse Books</h1>
                <p class="text-muted mb-0">Discover and borrow from our digital collection</p>
            </div>
        </div>
    </div>
</section>

<!-- Search & Filters Section -->
<section class="py-4" style="background-color: var(--color-surface);">
    <div class="container">
        <div class="search-filter-card">
            <form method="get" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label text-muted small fw-semibold">SEARCH BOOKS</label>
                    <input asp-for="SearchString" class="form-control" placeholder="Search by Title, Author, ISBN" />
                </div>
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-semibold">CATEGORY</label>
                    <select asp-for="Category" class="form-control">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category" selected="@(category == Model.Category ? "selected" : null)">
                                @category
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-semibold">AVAILABILITY</label>
                    <select asp-for="AvailableOnly" class="form-select">
                        <option value="False">All Books</option>
                        <option value="True">Available Only</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">
                        <i class="bi bi-search me-1"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Books Grid Section -->
<section class="py-5 bg-white">
    <div class="container">
        @if (Model.Books != null && Model.Books.Any())
        {
            <div class="books-grid">
                @foreach (var book in Model.Books)
                {
                    <div class="book-card">
                        <div class="card-body p-0">
                            <!-- Book Cover -->
                            <div class="position-relative mb-3">
                                @if (!string.IsNullOrEmpty(book.CoverImagePath))
                                {
                                    <img src="@book.CoverImagePath"
                                         alt="@book.Title"
                                         class="img-fluid w-100"
                                         style="height: 220px; object-fit: cover; border-radius: var(--border-radius-md) var(--border-radius-md) 0 0;" />
                                }
                                else
                                {
                                    <div class="book-cover-placeholder d-flex align-items-center justify-content-center"
                                         style="height: 220px; border-radius: var(--border-radius-md) var(--border-radius-md) 0 0;">
                                        <i class="bi bi-book" style="font-size: 3rem; color: var(--color-text-light);"></i>
                                    </div>
                                }

                                <!-- Availability Badge -->
                                <div class="position-absolute top-0 end-0 m-2">
                                    @if (book.AvailableCopies > 0)
                                    {
                                        <span class="badge status-available">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </div>
                            </div>

                            <!-- Book Info -->
                            <div class="px-3 pb-3">
                                <h5 class="fw-bold mb-2 text-truncate" title="@book.Title">@book.Title</h5>
                                <p class="text-muted small mb-2">by @book.Author</p>

                                <!-- Category Badge -->
                                <span class="badge bg-light text-dark border small mb-3">@book.Category</span>

                                <!-- Book Details -->
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center text-muted small mb-1">
                                        <span>Available Copies:</span>
                                        <span class="fw-semibold">@book.AvailableCopies/@book.TotalCopies</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center text-muted small">
                                        <span>ISBN:</span>
                                        <span class="fw-semibold">@book.ISBN</span>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-flex gap-2">
                                    @if (book.AvailableCopies > 0)
                                    {
                                        if (Model.ActiveBorrowCount >= 3)
                                        {
                                            <button class="btn btn-warning btn-sm flex-grow-1" disabled>
                                                <i class="bi bi-exclamation-triangle me-1"></i>Limit Reached
                                            </button>
                                        }
                                        else
                                        {
                                            <form asp-controller="Borrows" asp-action="Borrow" method="post" class="flex-grow-1">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="bookId" value="@book.Id" />
                                                <button type="submit" class="btn btn-success btn-sm w-100">
                                                    <i class="bi bi-download me-1"></i>Borrow
                                                </button>
                                            </form>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-secondary btn-sm flex-grow-1" disabled>
                                            <i class="bi bi-x-circle me-1"></i>Unavailable
                                        </button>
                                    }
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-search"></i>
                </div>
                <h4>No Books Found</h4>
                <p class="text-muted">Try adjusting your search criteria or browse all available books.</p>
                <a href="/books" class="btn btn-dark">
                    <i class="bi bi-arrow-clockwise me-2"></i>Reset Search
                </a>
            </div>
        }
    </div>
</section>